<div id="loginModal" data-controller="submit-form-with-ajax" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 left-0 right-0  z-50 justify-center items-center w-full md:inset-0 h-96">
    <div class="fixed  top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-4 w-full max-w-2xl h-2/3 transition ease-out duration-300">
        <!-- Modal content -->
        <div class="relative flex w-full bg-[#E9E9E9] shadow h-full">
            <!-- Modal header -->
            <div class="bg-black flex flex-col items-center h-auto w-1/2 justify-center px-3">
                <span class="text-white text-center font-semibold text-2xl items-center">Welcome to ArtistryLab! </span>
                <span class="text-white text-center font-medium text-sm mt-1">Join us in an inseparable journey!</span>

            </div>
            <div class="flex flex-col w-1/2">
                <button data-action="click->home#openModal" type="button" class="justify-end text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 mr-2 mt-2 inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="defaultModal">
                    <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    <span class="sr-only">Close modal</span>
                </button>
                <div class="h-full items-center justify-center flex flex-col">
                    <div class="items-center flex flex-col  justify-center">
                        <span class="text-2xl text-black font-semibold mb-4 text-center">Sign Up</span>
                    </div>
                        <div class="flex flex-col  px-3 mb-4 items-center mx-auto h-fit">
                            {{ form_start(signupForm, {'attr': {'id': 'signup_form'}}) }}
                            <div>
                                {{ form_label(signupForm.name) }}
                                {{ form_widget(signupForm.name,  {'attr': {'class':'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'} }) }}
                            </div>
                            <div>
                                {{ form_label(signupForm.surname) }}
                                {{ form_widget(signupForm.surname, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'}}) }}
                            </div>
                            <div>
                                {{ form_label(signupForm.username) }}
                                {{ form_widget(signupForm.username, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'}}) }}

                            </div>
                            <div>
                                {{ form_label(signupForm.age) }}
                                {{ form_widget(signupForm.age, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'}}) }}

                            </div>
                            <div>
                                {{ form_label(signupForm.type) }}
                                {{ form_widget(signupForm.type, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'}}) }}

                            </div>
                            <div>
                                {{ form_label(signupForm.email) }}
                                {{ form_widget(signupForm.email, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'}}) }}

                            </div>
                            <div>
                                {{ form_label(signupForm.password) }}
                                {{ form_widget(signupForm.password, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'}}) }}

                            </div>
                        </div>
                        <button type="button" data-action="click->submit-form-with-ajax#submitSignUp" class="text-black px-3 py-2 w-32 flex items-center text-center mx-auto text-xl font-semibold bg-mint hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-none rounded-2xl  dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            Signup
                        </button>
                        {{ form_end(signupForm) }}

                </div>

            </div>
        </div>
    </div>
</div>