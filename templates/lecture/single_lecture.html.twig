                        <div class="swiper-slide">
                            <img src="{{ asset('build/images/pian.b180330b.jpg') }}" class="w-full h-fit object-cover" alt="">
                        </div>

                        <div class="swiper-slide">
                            <img src="{{ asset('build/images/pian.b180330b.jpg') }}" class="w-full h-fit object-cover" alt="">
                        </div>
                    </div>
                    <!-- next / prev arrows -->
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                    <!-- !next / prev arrows -->
                </div>
                <div class="flex flex-col items-center justify-center w-1/2">
                    <div class="flex flex-col w-1/2 items-left">
                        {% set type = lecture.type|split(',') %}
                        <div class="text-lg"><span class="font-semibold">Instructed By: </span>{{ lecture.user.name }} {{ lecture.user.surname }}</div>
                        <div class="text-lg"><span class="font-semibold">Type of lecture: </span>{{ type[1] }}</div>
                        <div class="text-lg"><span class="font-semibold">When: </span>{{ lecture.startDate | date("F j, Y") }}</div>
                        <div class="text-lg"><span class="font-semibold">Where: </span>{{ type[0] }}</div>
                    </div>
                    <button class="rounded-full w-1/4 text-2xl bg-mint font-extrabold uppercase text-center px-6 py-3 mt-10 mb-2">CONTACT</button>
                    <div class="text-sm">Contact the instructor and book a place in the classroom.</div>

                </div>
            </div>

        </div>

    </section>

    <section>
        <div class="mx-12 flex flex-col w-4/5">
            <div class="font-semibold text-2xl mb-2">Description</div>
            <div class="font-lg mb-6">
                {{ lecture.description }}
            </div>
            <div class="font-semibold text-2xl mb-2">Get to know the lecturer</div>
            <div class="flex space-x-4 mb-8 mt-4">
                <img src="{{ asset('build/images/cliff-pinwill.807e025e.jpg') }}" class="w-28 h-28 rounded-full border-white object-cover">
                <div class="flex flex-col leading-6 justify-center">
                    <span class="font-semibold">{{ lecture.user.name }} {{ lecture.user.surname }}</span>
                    <span class="">{{ lecture.user.interests }} {{ lecture.user.type }}</span>
                    <span class="">{{ lecture.user.email }}</span>
                </div>
            </div>
            <div class="font-lg mb-6">
                {{ lecture.user.description }}
            </div>
        </div>

        <div class="flex flex-col mb-10">
