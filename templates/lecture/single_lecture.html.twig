{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <section id="navigation">
        <nav id="nav_bar" class="fixed top-0 w-full z-50 gradient flex text-white top-0 justify-between bg-black font-bold py-3 px-5">
            <div class="flex items-center space-x-6">
                <div class="text-md">ArtistryLab</div>
                <button id="dropdownNavbarLink" data-dropdown-toggle="dropdownNavbar" class="flex uppercase">
                    lectures
                    <svg class="w-5 h-5 ml-1" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd">

                        </path>
                    </svg>
                </button>
            </div>
            <div class="flex items-center space-x-4">
                <a class="text-md"> Sign In </a>
                <a class="bg-mint px-3 py-2 text-black text-lg rounded-lg">Sign Up</a>
            </div>

        </nav>
    </section>
    <section id="hero" class=" w-full">

        <div class="flex flex-col h-full mx-12 mt-20 ">

            <div class="flex mb-16">
                <div class="text-start text-5xl font-bold pt-12 tracking-normal w-full">
                    <span class="uppercase">{{ lecture.field }} </span>
                    - {{ lecture.name }}</div>
            </div>
            <div class="flex mb-10 h-100">
                <div class="swiper swiper-2 w-1/2 block">
                    <!-- swiper slides -->
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img src="{{ asset('build/images/pian.b180330b.jpg') }}" class="w-full h-fit object-cover" alt=""/>
                        </div>

